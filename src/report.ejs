<html>

<head>
  <style>
    table {
      font-family: Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid #ddd;
      text-align: left;
      padding: 8px;
    }
  </style>
</head>

<body>

  <h3 style="text-align: center;">Restaurant Management System</h3>
  <table>
    <tr>
      <th>Name: <%= name %>
      </th>
      <th>Email: <%= email %>
      </th>
    </tr>
    <tr>
      <th>Contact Number: <%= contact_number %>
      </th>
      <th>Patment Method: <%= payment_method %>
      </th>
    </tr>
  </table>

  <h3>Product Details:</h3>
  <table>
    <tr>
      <th>Name: </th>
      <th>Category: </th>
      <th>Quantity: </th>
      <th>Price: </th>
      <th>Sub total: </th>
    </tr>

    <% if(true) { %>
      <% product_details.forEach(product=> { %>
        <tr>
          <th>
            <%= product.name %>
          </th>
          <th>
            <%= product.category %>
          </th>
          <th>
            <%= product.quantity %>
          </th>
          <th>
            <%= product.price %>
          </th>
          <th>
            <%= product.total %>
          </th>
        </tr>
        <% }) %>
          <% } %>
  </table>
  <h3>Total: <%= total %>
  </h3>
  <h3>Thank you for visiting. Please visit us again!</h3>
</body>

</html>